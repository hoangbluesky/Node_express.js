<!DOCTYPE html>
<html lang="en">
<%- include("../layout/headAdmin.ejs", { 
        pageTitle: "Category | Ecommerce bootstrap template", 
    }) %>

<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            max-width: 600px;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .btn-danger {
            transition: 0.3s;
        }

        .btn-danger:hover {
            background-color: #dc3545;
            transform: scale(1.1);
        }
    </style>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include("../layout/navbarAdmin.ejs") %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->

        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid bg-light">
            <div class="container mt-5">
                <h2 class="text-center">Category Manager</h2>
                <div class="mb-3 d-flex">
                    <input type="text" id="categoryInput" class="form-control me-2" placeholder="Enter category">
                    <button class="btn btn-primary btn-sm text-nowrap" onclick="addCategory()">Add Category</button>
                </div>
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Category Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="categoryTableBody">
                        <% category.forEach((category,index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= category.nameCategory %></td>
                            <td><button class='btn btn-danger btn-sm' onclick='showDeleteModal(this)'>Delete</button>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Delete Confirmation Modal -->
            <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this category?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->


    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; Your Website 2021</span>
            </div>
        </div>
    </footer>
    <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->


    <script defer>
        let categoryCount = 0;
        let deleteTarget = null;

        function addCategory() {
            const categoryName = document.getElementById("categoryInput").value;
            if (!categoryName.trim()) {
                alert("Please enter a category name!");
                return;
            }
            fetch('/admin/category', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ name: categoryName })
            })
            .then(data => {
                window.location.reload();
                document.getElementById("categoryInput").value = "";
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }

        function showDeleteModal(button) {
            deleteTarget = button.parentElement.parentElement;
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }

        document.getElementById("confirmDelete").addEventListener("click", function () {
            if (deleteTarget) {
                deleteTarget.remove();
                deleteTarget = null;
            }
            var deleteModal = bootstrap.Modal.getInstance(document.getElementById('deleteModal'));
            deleteModal.hide();
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>