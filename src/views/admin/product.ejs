<!DOCTYPE html>
<html lang="en">
<%- include("../layout/headAdmin.ejs", { 
        pageTitle: "Product | Ecommerce bootstrap template", 
    }) %>

<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa, #e8ecef);
            font-family: 'Arial', sans-serif;
        }
        .form-container {
            background: #ffffff;
            border-radius: 15px;
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
            padding: 30px;
            max-width: 700px;
            margin: auto;
        }
        td {
            vertical-align: middle !important;
        }
    </style>
</head>

<body id="page-top">

    <div id="wrapper">

        <%- include("../layout/navbarAdmin.ejs") %>

        <div class="container-fluid bg-light">
            <div class="container mt-4">
                <h2 class="text-center">Quản lý sản phẩm</h2>
                <div class="d-flex justify-content-end mb-3">
                    <a href="/admin/createProduct" class="btn btn-success">Thêm mới sản phẩm</a>
                </div>
                <table class="table table-bordered table-striped text-center">
                    <thead class="table-primary">
                        <tr>
                            <th>#</th>
                            <th>Tên sản phẩm</th>
                            <th>Hình ảnh</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% product.forEach((product,index) => { %>
                        <tr class="align-middle">
                            <td><%= index + 1 %></td>
                            <td><%= product.name %></td>
                            <td><img src="/images/<%=product.image %>" alt="<%= product.image %>" class="img-fluid" width="100"></td>
                            <td><%= product.price %></td>
                            <td><%= product.stock %></td>
                            <td>
                                <a href="/admin/storeProduct/<%= product.id %>/edit" class="btn btn-warning btn-sm">Sửa</a>
                                <a href="/admin/storeProduct/<%= product.id %>/delete" 
                                    class="btn btn-danger btn-sm" 
                                    onclick="return confirm('Bạn có chắc chắn muốn xóa không?');">
                                    Xóa
                                 </a>                                 
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        
        </div>

    </div>

    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; Your Website 2021</span>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
