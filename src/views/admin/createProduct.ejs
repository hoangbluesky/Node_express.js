<!DOCTYPE html>
<html lang="en">
<%- include("../layout/headAdmin.ejs", { 
        pageTitle: "Product | Ecommerce bootstrap template", 
    }) %>

<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa, #e8ecef);
            font-family: 'Arial', sans-serif;
        }
        .form-container {
            background: #ffffff;
            border-radius: 15px;
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
            padding: 30px;
            max-width: 700px;
            margin: auto;
        }
        .form-container h1 {
            text-align: center;
            font-weight: bold;
            margin-bottom: 20px;
            color: #4caf50;
        }
        .form-label {
            font-weight: 600;
            color: #333;
        }
        .btn-custom {
            background-color: #4caf50;
            color: white;
            font-weight: bold;
            padding: 10px 20px;
            border-radius: 25px;
            transition: all 0.3s;
        }
        .btn-custom:hover {
            background-color: #3e8e41;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }
        .form-select, .form-control {
            border-radius: 10px;
            border: 1px solid #ced4da;
        }
        .form-control:focus, .form-select:focus {
            border-color: #4caf50;
            box-shadow: 0 0 5px rgba(76, 175, 80, 0.5);
        }
        .form-text {
            color: #6c757d;
        }
        .form-footer {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>

<body id="page-top">

    <div id="wrapper">

        <%- include("../layout/navbarAdmin.ejs") %>

        <div class="container-fluid bg-light">
            <div class="container">
                <div class="form-container">
                    <h1>Thêm Sản Phẩm Mới</h1>
                    <form action="/admin/storeProduct" method="post" enctype="multipart/form-data">
                        <!-- Tên Sản Phẩm -->
                        <div class="mb-3">
                            <label for="productName" class="form-label">Tên Sản Phẩm</label>
                            <input type="text" class="form-control" id="productName" name="name" placeholder="Nhập tên sản phẩm" required>
                        </div>

                        <!-- Loại Sản Phẩm -->
                        <div class="mb-3">
                            <label for="categoryId" class="form-label">Loại Sản Phẩm</label>
                            <select class="form-select" id="categoryId" name="categoryId" required>
                                <% category.forEach(item => { %>
                                    <option value="<%= item.id%>"><%= item.nameCategory %></option>
                                <% }) %>
                            </select>
                        </div>
                        <!-- hinh anh -->
                        <div class="mb-3">
                            <label for="image" class="form-label">Hình Ảnh</label>
                            <input type="file" class="form-control" id="image" name="image" accept="image/*" required>
                            <div class="form-text">Định dạng: JPG, PNG, JPEG</div>
                            <img id="previewImage" src="#" alt="Xem trước ảnh" style="display: none; margin-top: 10px; width: 150px; height: auto;">
                        </div>
                        

                        <!-- Giá -->
                        <div class="mb-3">
                            <label for="price" class="form-label">Giá</label>
                            <input type="number" class="form-control" id="price" name="price" placeholder="Nhập giá (VND)" required>
                        </div>

                        <!-- Mô Tả -->
                        <div class="mb-3">
                            <label for="description" class="form-label">Mô Tả</label>
                            <textarea class="form-control" id="description" name="description" placeholder="Nhập mô tả sản phẩm" rows="3" required></textarea>
                        </div>

                        <!-- Số Lượng -->
                        <div class="mb-3">
                            <label for="stock" class="form-label">Số Lượng</label>
                            <input type="number" class="form-control" id="stock" name="stock" placeholder="Nhập số lượng" required>
                        </div>
                        <!-- Nút Submit -->
                        <div class="form-footer">
                            <button type="submit" class="btn btn-custom">Thêm Sản Phẩm</button>
                            <a href="/admin/product" class="btn btn-custom">Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; Your Website 2021</span>
            </div>
        </div>
    </footer>
    <script>
        document.getElementById("image").addEventListener("change", function(event) {
            const file = event.target.files[0]; // Lấy file đầu tiên
            if (file) {
                const previewImage = document.getElementById("previewImage");
                previewImage.src = URL.createObjectURL(file);
                previewImage.style.display = "block";
            }
        });
        
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
